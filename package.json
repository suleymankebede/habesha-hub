{
  "name": "habeshahub",
  "version": "1.0.0",
  "description": "Ethiopian community platform connecting people worldwide",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "npm run minify-css && npm run compress-images",
    "minify-css": "cleancss -o css/style.min.css css/style.css",
    "compress-images": "imagemin images/**/*.{jpg,png,gif} --out-dir=images/compressed",
    "audit": "npm audit",
    "update": "npm update"
  },
  "keywords": [
    "ethiopian",
    "community",
    "jobs",
    "events",
    "marketplace",
    "gcc",
    "diaspora"
  ],
  "author": "HabeshaHub Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "socket.io": "^4.7.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.4",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "clean-css-cli": "^5.6.2",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-mozjpeg": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/habeshahub.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/habeshahub/issues"
  },
  "homepage": "https://mela.com.et"
}
